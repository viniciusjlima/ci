@model Aluno.Entity.aluno



@using (Html.BeginForm()) {
   

    <fieldset>
        <legend>aluno</legend>

        @Html.HiddenFor(model => model.IdAluno)

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CPF)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CPF)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Matricula)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Matricula)
        </div>

        <p>
            <input type="submit" value="Salvar" onclick="return validar();" />
            <input type="button" value="Cancelar" onclick="cancelar();" />
        </p>
    </fieldset>
}
<script>
    $("#CPF").mask('000.000.000-00');
</script>
<script>
   
    
    
    function cancelar() {
        carregarTabela('');
    }

    function validar() {

        if ($("#Nome").val() == "") {
            alert("Atenção o nome é obrigatório!");
            return false;
        }
        if ($("#CPF").val() == "") {
            alert("Atenção o CPF é obrigatório!");
            return false;
        }
        if ($("#CPF").val().length != 14) {
            alert("CPF Invalido!");
            return false;
        }
        if ($("#Matricula").val() == "") {
            alert("A Matricula é obrigatória!");
            return false;
        }
        if ($("#Matricula").val().length != 8) {
            alert("Atenção a Matricula deve possuir 8 caracteres");
            return false;
        }

        return true;
    }

</script>